<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Header -->
  <header class="site-header">
    <div class="container d-flex justify-content-between align-items-center">
      <a href="{{#if user}}/assignments{{else}}/{{/if}}" class="site-title">
        CMTree
      </a>
      <nav>
        <ul class="nav">
          {{#if user}}
          <li class="nav-item">
            <a class="nav-link position-relative" href="/notifications">
              Notifications
              <span id="notification-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
              </span>
            </a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a class="nav-link" href="/assignments">Community</a>
          </li>
          {{#if user}}
            <li class="nav-item">
              <a class="nav-link" href="/{{user.username}}">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout ({{user.username}})</a>
            </li>
          {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow-1">
    <div class="container py-4">
      {{{body}}}
    </div>
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container text-center">
      <p class="mb-0">&copy; CMTree | CMTA | Sebastian Bruce</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>
  async function fetchNotificationCount() {
    try {
      const response = await fetch('/notifications/unread-count');
      const data = await response.json();
      const countSpan = document.getElementById('notification-count');

      if (data.count > 0) {
        countSpan.textContent = data.count;
        countSpan.classList.remove('d-none');
      } else {
        countSpan.classList.add('d-none');
      }
    } catch (error) {
      console.error('Failed to fetch notification count:', error);
    }
  }
  // Fetch once immediately after page load
  fetchNotificationCount();
</script>
<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  // Join user-specific room
  {{#if user}}
    socket.emit('join', '{{user._id}}');
  {{/if}}

  socket.on('new-notification', () => {
    fetchNotificationCount();
  });
  socket.on('notifications-updated', () => {
    setTimeout(() => {
      fetchNotificationCount();
    }, 1000);
  });
</script>

